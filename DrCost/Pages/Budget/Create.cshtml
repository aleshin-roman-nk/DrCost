@page
@model DrCost.Pages.Budget.CreateModel
@{
}

@if(!string.IsNullOrEmpty(Model.msg))
{
    <div class="alert alert-danger" role="alert">
        @Model.msg
    </div>

}

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.Budget.Name" class="form-label">Name</label>
        <input asp-for="@Model.Budget.Name" type="text" class="form-control" placeholder="@Model.Budget.Name">
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Budget.DefaultMoney" class="form-label">AllowedSum</label>
        <input asp-for="@Model.Budget.DefaultMoney" type="number" class="form-control" placeholder="@Model.Budget.DefaultMoney" >
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="@Model.Budget.IsActive">
        <label class="form-check-label" asp-for="@Model.Budget.IsActive">Is active</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="@Model.Budget.HasCalendar">
        <label class="form-check-label" asp-for="@Model.Budget.HasCalendar">Has calendar</label>
    </div>

    <input class="btn btn-outline-success mb-3" type="submit" value="Save" />
    <a class="btn btn-outline-info mb-3" asp-page="/budget/index">Cancel</a>
</form>