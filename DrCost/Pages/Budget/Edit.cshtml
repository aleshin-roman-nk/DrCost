@page "{budgetid}/{handler?}"
@model DrCost.Pages.Budget.EditModel
@{
    var dt = DateTime.Today;
}

<form method="post">
    <input asp-for="@Model.Budget.Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="@Model.Budget.Name" class="form-label">Name</label>
        <input asp-for="@Model.Budget.Name" type="text" class="form-control" placeholder="@Model.Budget.Name">
    </div>


    <div class="mb-3">
        <label asp-for="@Model.Budget.DefaultMoney" class="form-label">AllowedSum</label>
        <input asp-for="@Model.Budget.DefaultMoney" type="number" class="form-control" placeholder="@Model.Budget.DefaultMoney" >
    </div>


    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="@Model.Budget.IsActive">
        <label class="form-check-label" asp-for="@Model.Budget.IsActive">Активен</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="@Model.Budget.HasCalendar">
        <label class="form-check-label" asp-for="@Model.Budget.HasCalendar">Имеет календарь</label>
    </div>


    <input class="btn btn-outline-success mb-3" type="submit" value="Save" />
    <a class="btn btn-outline-info mb-3" 
    asp-page="/budget/detail" 
    asp-route-budgetid="@Model.Budget.Id"
    asp-route-year="@dt.Year"
    asp-route-month="@dt.Month"
    >Cancel</a>
    <a class="btn btn-outline-danger mb-3" asp-page-handler="Delete">delete</a>
</form>


